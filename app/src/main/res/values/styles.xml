<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DecathlonCanaveral" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dkt</item>
        <item name="colorPrimaryVariant">@color/blue_dkt</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DecathlonCanaveral.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.DecathlonCanaveral.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    // TEXT STYLES - START
    <style name="Dkt">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Dkt.TextStyle" parent="Dkt">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Dkt.TextStyle.Black" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Dkt.TextStyle.BlueDecat" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/blue_dkt</item>
    </style>

    <style name="Dkt.TextStyle.BlueDecatSecondary" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/blue_dkt_secondary</item>
    </style>

    <style name="Dkt.TextStyle.BlueDkt400" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/blue_dkt_400</item>
    </style>

    <style name="Dkt.TextStyle.Winner.Stats" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/winner_stat_text</item>
    </style>

    <style name="Dkt.TextStyle.Grey" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="Dkt.TextStyle.Grey.Clickable" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/grey_text_clickable</item>
    </style>

    <style name="Dkt.TextStyle.White" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dkt.TextStyle.EditText" parent="Dkt.TextStyle.Black">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.SpinnerText" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/spinner_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.SelectSpinnerText" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.Label" parent="Dkt.TextStyle.Grey">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Dkt.TextStyle.Link" parent="Dkt.TextStyle.BlueDecat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Dkt.TextStyle.BigButton" parent="Dkt.TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dkt.TextStyle.Game.Ppd" parent="Dkt.TextStyle.White">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Dkt.TextStyle.Game.Round" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerName.Playing" parent="Dkt.TextStyle.White">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerScore.Playing" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">180sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerShot" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Dkt.TextStyle.Options.Title" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dkt.TextStyle.Options.Item" parent="Dkt.TextStyle.Grey">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Dkt.TextStyle.End.Title" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    // Player stats - Small
    <style name="Dkt.TextStyle.Player.Stats.Name" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Title" parent="Dkt.TextStyle.White">
        <item name="android:textSize">7sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Value" parent="Dkt.TextStyle.White">
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    // Player stats - Medium
    <style name="Dkt.TextStyle.Player.Stats.Name.Medium" parent="Dkt.TextStyle.Player.Stats.Name">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Title.Medium" parent="Dkt.TextStyle.Player.Stats.Item.Title">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Value.Medium" parent="Dkt.TextStyle.Player.Stats.Item.Value">
        <item name="android:textSize">16sp</item>
    </style>

    // Winner stats - Small
    <style name="Dkt.TextStyle.Winner.Stats.Name.Small" parent="Dkt.TextStyle.Winner.Stats">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Dkt.TextStyle.Winner.Stats.Item.Title.Small" parent="Dkt.TextStyle.Winner.Stats">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Dkt.TextStyle.Winner.Stats.Item.Value.Small" parent="Dkt.TextStyle.Winner.Stats">
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    // Winner stats - Large
    <style name="Dkt.TextStyle.Winner.Stats.Name.Large" parent="Dkt.TextStyle.Winner.Stats">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Dkt.TextStyle.Winner.Stats.Item.Title.Large" parent="Dkt.TextStyle.Winner.Stats">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Dkt.TextStyle.Winner.Stats.Item.Value.Large" parent="Dkt.TextStyle.Winner.Stats">
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Dkt.TextStyle.Loading.Title" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Dkt.TextStyle.Loading.Content" parent="Dkt.TextStyle.White">
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Dkt.TextStyle.Settings.Title" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/settings_title</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/settings_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_title_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/settings_title_margin_start</item>
    </style>

    <style name="Dkt.TextStyle.Settings.Item" parent="Dkt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.Settings.Value" parent="Dkt.TextStyle.BlueDecat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.Settings.SpinnerText" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/spinner_item_selector</item>
        <item name="background">@drawable/spinner_selector_background</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.Splash.Version" parent="Dkt.TextStyle.White">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Dkt.TextStyle.Button" parent="Dkt.TextStyle.BlueDkt400">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">9dp</item>
    </style>

    // TEXT STYLES - END
</resources>
