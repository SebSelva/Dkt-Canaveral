<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DecathlonCanaveral" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dkt</item>
        <item name="colorPrimaryVariant">@color/blue_dkt</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DecathlonCanaveral.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DecathlonCanaveral.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    // TEXT STYLES - START
    <style name="Dkt">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Dkt.TextStyle" parent="Dkt">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Dkt.TextStyle.BlueDecat" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/blue_dkt</item>
    </style>

    <style name="Dkt.TextStyle.BlueDecatSecondary" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/blue_dkt_secondary</item>
    </style>

    <style name="Dkt.TextStyle.Grey" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="Dkt.TextStyle.White" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dkt.TextStyle.SpinnerText" parent="Dkt.TextStyle">
        <item name="android:textColor">@color/spinner_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dkt.TextStyle.Label" parent="Dkt.TextStyle.Grey">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Dkt.TextStyle.Link" parent="Dkt.TextStyle.BlueDecat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Dkt.TextStyle.BigButton" parent="Dkt.TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dkt.TextStyle.Game.Info" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerName.Waiting" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerName.Playing" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerScore.Waiting" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">55sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerScore.Playing" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">100sp</item>
    </style>

    <style name="Dkt.TextStyle.PlayerShot" parent="Dkt.TextStyle.BlueDecatSecondary">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dkt.TextStyle.Options.Title" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dkt.TextStyle.Options.Item" parent="Dkt.TextStyle.Grey">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Dkt.TextStyle.End.Title" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    // Player stats - Small
    <style name="Dkt.TextStyle.Player.Stats.Name" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Title" parent="Dkt.TextStyle.White">
        <item name="android:textSize">7sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Value" parent="Dkt.TextStyle.White">
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    // Player stats - Medium
    <style name="Dkt.TextStyle.Player.Stats.Name.Medium" parent="Dkt.TextStyle.Player.Stats.Name">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Title.Medium" parent="Dkt.TextStyle.Player.Stats.Item.Title">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Value.Medium" parent="Dkt.TextStyle.Player.Stats.Item.Value">
        <item name="android:textSize">16sp</item>
    </style>

    // Player stats - Large
    <style name="Dkt.TextStyle.Player.Stats.Name.Large" parent="Dkt.TextStyle.Player.Stats.Name">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Title.Large" parent="Dkt.TextStyle.Player.Stats.Item.Title">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Dkt.TextStyle.Player.Stats.Item.Value.Large" parent="Dkt.TextStyle.Player.Stats.Item.Value">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Dkt.TextStyle.Loading.Title" parent="Dkt.TextStyle.White">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Dkt.TextStyle.Loading.Content" parent="Dkt.TextStyle.White">
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    // TEXT STYLES - END
</resources>
